package Avancados;

import java.util.ArrayList;
import java.util.List;

public class Streeams3 {

	public static void main(String[] args) {

		List<Curso> cursos = new ArrayList<Curso>();

		cursos.add(new Curso("Programação para Leigos", 170));
		cursos.add(new Curso("Algoritmos e Lógica de Programaç", 280));
		cursos.add(new Curso("Programação em C: Essencial", 500));
		cursos.add(new Curso("Programação em Java: Essencial", 2));
		cursos.add(new Curso("Programação em Python: Essencial", 190));
		cursos.add(new Curso("Banco de Dados: Essencial", 10));

		int soma = cursos.stream().filter(c -> c.getquantidadeAlunos() >= 200)
				// MapToInt Permite que possamos efetuar cálculos com o resultado
				.mapToInt(Curso::getquantidadeAlunos).sum();

		System.out.println("Soma de todos os cursos " + soma);
	}

}
